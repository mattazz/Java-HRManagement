<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23" fx:controller="com.example.hrmanagement.AdminLoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <ImageView id="userIcon" fitWidth="100" fitHeight="100">
        <Image url="@adminIcon.png"/>
    </ImageView>
   <Label styleClass="title" text="HR Ticket Management System 1.0" />
   <Label styleClass="header" text="Admin Login" />
    <VBox prefHeight="50.0" prefWidth="200.0" alignment="CENTER" spacing="10" maxWidth="400">
       <TextField fx:id="adminEmail" promptText="email" />
       <PasswordField fx:id="adminPassword" promptText="password" />
    </VBox>
    <Button fx:id="loginBtn" onAction="#onLoginButtonClick" text="Login" />

    <Label fx:id="noticeMessage" />
   <Button fx:id="adminLoginBtn" onAction="#onEmployeeLoginButtonClick" text="Employee Login" />
</VBox>
